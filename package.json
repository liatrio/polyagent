{
  "name": "@polyagent/mcp-server",
  "version": "0.1.0",
  "description": "MCP server that bridges AI coding assistants with the OPA policy ecosystem",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "polyagent-mcp": "dist/server.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "tsc --watch"
  },
  "keywords": [
    "mcp",
    "opa",
    "policy",
    "model-context-protocol"
  ],
  "author": "ianhundere",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@open-policy-agent/opa-wasm": "^1.10.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.0.1",
    "js-yaml": "^4.1.1",
    "openai": "^4.104.0",
    "pino": "^9.14.0",
    "pino-pretty": "^11.3.0",
    "simple-git": "^3.30.0",
    "tar": "^7.4.3",
    "zod": "^4.1.12",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.19.1",
    "@types/tar": "^6.1.13",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
